                    icon_right: "android"
                    mode: "rectangle"

                    size_hint_x: None
                    width: "400dp"

                MDFloatingActionButton:
                    id: ButtonSearchingCharge

                    icon: "book-search"
                    type: "standard"

                MDLabel:

                MDFloatingActionButton:
                    icon: "account-multiple-plus"
                    type: "standard"

                    on_release: root.ChangePageChargeAddPage()

            
