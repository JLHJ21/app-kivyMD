
<ChargeAddPage>:
    name: "ChargeAddPage"

    MDBoxLayout:

        orientation: 'vertical'
        size_hint: 1, 1

        padding: dp(32), dp(root.manager.parent.parent.ids.toolbar.height * 1.3), dp(32), dp(root.manager.parent.parent.ids.toolbarbottom.height)
        
        
        MDGridLayout: 
            cols: 2
            
            size_hint_y: None
            height: self.minimum_height

            MDLabel:

                text: 'Proveedor: '
                font_style: 'H5'
            
            MDTextField:
                mode: 'rectangle'
                text: ''
                hint_text: 'Proveedor'
                focus: True
                
        MDScrollView:
            MDGridLayout:
                cols: 1
                #orientation: 'vertical'
                #size_hint: 1, 1
                id: BoxLayoutChargeAdd
                size_hint_y: None
                height: self.minimum_height  # required to size GridLayout

                #COLUMNA UNO
                MDGridLayout:
                    id: FirstItemMDGridLayout
                    cols: 5
                    spacing: dp(20)
                    padding: dp(1), dp(5), dp(1), dp(1)
                    
                    size_hint_y: None
                    height: dp(60)

                    MDTextField:
                        mode: 'rectangle'
                        text: ''
                        hint_text: 'Producto'
                        focus: True

                    MDTextField:
                        mode: 'rectangle'
                        text: ''
                        hint_text: 'Cantidad'
                        focus: True

                    MDTextField:
                        id: TextFieldPrecio
                        mode: 'rectangle'
                        text: ''
                        hint_text: 'Precio'
                        focus: True

                    #MDTextField:
                    #    mode: 'rectangle'
                    #    text: ''
                    #    hint_text: 'Nuevo'
                    #    focus: True

                    MDGridLayout:
                        cols:1
                        adaptive_height: True
                        size_hint_x: None
                        width: SwitchChargeAdd.width * 2


                        MDSwitch:
                            id: SwitchChargeAdd
                                
                            pos_hint: {'center_x': 0.05, 'center_y': -0.5}
                            icon_active: "check"

                            on_active: root.on_checkbox_active(*args)

                    MDFloatingActionButton:

                        id: buttonAddItemCharge

                        icon: "account-plus"
                        type: "small"
                        on_release: root.AddItemCharge('FirstItemMDGridLayout', 'buttonAddItemCharge')
                        elevation: 0
                        pos_hint: {'center_x': .5, 'center_y': .5}

        #DINERO QUE SE GASTARA
        MDBoxLayout:
            orientation: 'vertical'
            MDGridLayout:
                cols:2
                adaptive_height: True

                #Proveedores
                MDLabel:
                    text: 'Proveedores'
                    halign: 'center'
                    font_style: 'H6'
                MDLabel:
                    text: '-XXX$'
                    halign: 'center'
                    font_style: 'H6'

                #Ganancias
                MDLabel:
                    text: 'Ganancias'
                    halign: 'center'
                    font_style: 'H6'
                MDLabel:
                    text: 'XXX$'
                    halign: 'center'
                    font_style: 'H6'
                    underline: True

                #Total
                MDLabel:

                
                MDLabel:
                    text: 'X$'
                    halign: 'center'
                    font_style: 'H6'
                    

        #BOTONES
        MDGridLayout:
            cols: 3
            spacing: dp(20)
            adaptive_height: True
            padding: dp(32)

            MDRectangleFlatButton:
                text: 'Cancelar'
                size_hint_x: 0.4


            MDLabel:
                size_hint_x: 0.1

            MDRaisedButton:
                text: 'Aceptar'
                size_hint_x: 0.4
